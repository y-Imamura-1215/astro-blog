---
import Layout from '../layouts/Layout.astro';
import { getBlogDetail, getBlogs } from '../libs/microcms';

export async function getStaticPaths() {
  const response = await getBlogs({ fileds: ['id'] });
  return response.contents.map(
    (blog: any) => ({
      params: {
        blogId: blog.id,
      },
    }),
    // return [
    //   { params: { blogId: '51a3pjhzje' } },
    //   { params: { blogId: 'rover' } },
    //   { params: { blogId: 'spot' } },
    // ];
  );
}

const { blogId } = Astro.params;
const blog = await getBlogDetail(blogId as string);
---

<Layout>
  <main>
    <h1>{blog.title}</h1>
    <p>公開日時：{new Date(blog.publishedAt).toLocaleString()}</p>
    <div set:html={blog.content} />
  </main>
</Layout>

<style>
  main {
    margin: auto;
    padding: 1em;
    max-width: 60ch;
  }
  p {
    font-size: 14px;
    color: gray;
  }
</style>
